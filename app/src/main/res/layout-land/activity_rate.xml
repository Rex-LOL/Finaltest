<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RateActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rate_input"
        android:hint="@string/rate_hint"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rate_output"
        android:textSize="28dp"
        android:layout_margin="8dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rate_won"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="convert"
            android:layout_weight="1"
            android:text="@string/rate_won" />

        <Button
            android:id="@+id/rate_euro"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="convert"
            android:layout_weight="1"
            android:text="@string/rate_euro" />

        <Button
            android:id="@+id/rate_dol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="convert"
            android:layout_weight="1"
            android:text="@string/rate_dol" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rate_openCfg"
        android:onClick="openCfg"
        android:layout_marginTop="24dp"
        android:text="@string/rate_openCfg_label"/>



</LinearLayout>